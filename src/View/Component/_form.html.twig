<div class="form-container">
<form action="" method="post" class="form">
    <div class="form-group">
        <label for="title">Titre du Projet</label>
        <input type="text" name="title" class="form-control" id="title" placeholder="The Super Project">
    </div>
    <div class="form-group">
        <label for="type">Type de Projet</label>
        <select class="form-control" id="type">
            <option>Projet 1</option>
            <option>Projet 2</option>
            <option>Projet 3</option>
        </select>
    </div>
    <div class="form-group">
        <label for="type">Langage</label>
        <select class="form-control" id="type">
            <option>PHP</option>
            <option>JavaScript</option>
            <option>HTML/CSS</option>
            <option>Python</option>
        </select>
    </div>
    <div class="form-group">
        <label for="promo">Promo</label>
        <input type="text" name="promo" class="form-control" id="promo" placeholder="Septembre 2020">
    </div>
    <div class="form-group">
        <label for="description">Description du Projet</label>
        <textarea class="form-control" id="description" rows="3"></textarea>
    </div>
    <div class="form-check">
        <input type="checkbox" class="form-check-input" name="isFavorite" value="1" id="isFavorite">
        <label class="form-check-label" for="isFavorite">
            C'est un favoris
        </label>
    </div>
    <button type="submit" class="btn btn-primary btn-add">Ajouter</button>
</form>
</div>
